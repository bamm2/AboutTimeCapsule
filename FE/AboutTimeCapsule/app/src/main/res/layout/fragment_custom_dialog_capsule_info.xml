<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        tools:context=".views.map.CustomDialogCapsuleInfoFragment">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="430dp"
            android:padding="2dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/group_sign"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    android:src="@drawable/groupimg"/>
                <ImageView
                    android:id="@+id/private_sign"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:src="@drawable/privateimg"/>
                <ImageView
                    android:id="@+id/x_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/mapinfoclosebtn"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/capsuleInfo_capsule_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:padding="25dp"
                android:src="@drawable/redcapsule" />
              <TextView
                android:id="@+id/capsule_info_opendate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="2023.3.3"/>
              <TextView
                android:id="@+id/capsule_info_availDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="26sp"
                  android:visibility="gone"
                android:textColor="@color/btnColor"
                tools:text="2023.3.3"/>

           <TextView
                android:id="@+id/capsule_info_remainTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="@color/btnColor"
                android:visibility="gone"
                android:text="2023.3.3"/>
            <TextView
                android:id="@+id/capsule_info_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="000님의 캡슐"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/capsuleinfo_dialog_btn"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_radius_rectangle"
                android:backgroundTint="@color/btnColor"
                android:fontFamily="@font/onemobile"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="닫기" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
