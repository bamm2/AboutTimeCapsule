<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/circleBackColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/main_section2_capsule"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle_background_white"
                android:padding="2dp"
                android:src="@drawable/redcapsule" />

        </FrameLayout>
        <TextView
            android:id="@+id/main_section2_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            tools:text="강낭당랑님의 캡슐"
            android:textSize="12sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/main_section2_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            tools:text="장소 정보"
            android:textSize="8sp"
            android:gravity="center"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>