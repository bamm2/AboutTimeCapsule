<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_section2_cardview"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/circleBackColor"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/main_section2_capsule"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/circle_background_white"
                    android:padding="2dp"
                    android:src="@drawable/redcapsule" />

            </FrameLayout>

            <TextView
                android:id="@+id/main_section2_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:textSize="12sp"
                tools:text="강낭당랑님의 캡슐" />

            <TextView
                android:id="@+id/main_section2_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textSize="8sp"
                tools:text="장소 정보" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>