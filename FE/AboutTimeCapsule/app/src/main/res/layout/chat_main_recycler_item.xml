<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_main_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12.5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/my_page_img_frame"
            android:src="@drawable/sunglass"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_main_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chatNicknameTextColor"
                android:textSize="15sp"
                android:text="닉네임"/>
            <TextView
                android:id="@+id/chat_main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/chatContentTextColor"
                android:text="내용"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/chat_main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center"
            android:textColor="@color/chatContentTextColor"
            android:textSize="9sp"
            android:text="0 일전"/>
        
    </LinearLayout>

</layout>