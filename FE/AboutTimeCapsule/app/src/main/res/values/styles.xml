<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--   메인페이지 - 캡슐리스트,지도 탭레이아웃 텍스트 속성  -->
    <style name="tabTextSizeBold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/onemobile</item>
    </style>

<!--    datePicker calendar 속성 -->
    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색상 변경 -->
        <item name="colorAccent">@color/datePickerColor</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/datePickerColor</item>
        <item name="colorControlHighlight">@color/datePickerColor</item>
        <!-- 취소/확인 버튼 글꼴 -->
        <item name="android:fontFamily">@font/onemobile</item>
    </style>

<!--    capsule article popup menu 속성  -->

    <style name="articlePopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:width">15dp</item>
        <item name="android:height">8dp</item>
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">@font/onemobile</item>
        <item name="android:background">@color/btnColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
    </style>
</resources>